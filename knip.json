{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [],
      "project": []
    },
    "shared": {
      "entry": ["types.ts", "schemas.ts"],
      "project": ["**/*.ts", "!**/*.test.ts"]
    },
    "server": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "client": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": ["**/__tests__/**", "**/*.test.ts", "**/*.config.ts"],
  "ignoreDependencies": ["@types/*", "tsx", "vite"]
}
