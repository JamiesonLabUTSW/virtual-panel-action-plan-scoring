{
  "name": "@grading/client",
  "version": "1.0.0",
  "description": "React frontend with CopilotKit UI for the grading demo",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "dev": "vite",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:related": "vitest related --run"
  },
  "dependencies": {
    "@copilotkit/react-core": "^1.51.0",
    "@copilotkit/react-ui": "^1.51.0",
    "@tailwindcss/vite": "^4.1.18",
    "react": "^18.3.0",
    "react-cookie-consent": "^9.0.0",
    "react-dom": "^18.3.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^1.0.0"
  }
}
