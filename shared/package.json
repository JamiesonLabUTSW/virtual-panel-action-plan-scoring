{
  "name": "@shared/types",
  "version": "1.0.0",
  "description": "Shared types and Zod schemas for the grading demo",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:related": "vitest related --run"
  },
  "exports": {
    ".": {
      "import": "./types.ts",
      "types": "./types.ts"
    },
    "./schemas": {
      "import": "./schemas.ts",
      "types": "./schemas.ts"
    },
    "./types": {
      "import": "./types.ts",
      "types": "./types.ts"
    }
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
}
